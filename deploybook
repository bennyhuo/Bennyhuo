BASE_DIR=$(cd $(dirname $0) && pwd -P)

TEMP_DIR=$BASE_DIR"/source/build/tmp"

if [ ! -d TEMP_DIR ]
then
    mkdir $TEMP_DIR
fi

cd $BASE_DIR"/source/build/gitbook"

for dir in */ ; do
    echo "-------------------------"
    echo "deploy '$dir'"
    cd $dir
    bash $BASE_DIR/scripts/push_book.sh $TEMP_DIR
    cd -
done